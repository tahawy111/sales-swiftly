<header class="bg-white dark:bg-gray-800 shadow">
    <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
            <div class="flex items-center">
                <h1 class="text-xl font-bold text-gray-800 dark:text-white">Sales Swiftly</h1>
            </div>
            <div class="flex items-center space-x-4">
                <% if (locals.user) { %>
                    <a href="/dashboard" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">Dashboard</a>
                    <a href="/pos" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">POS</a>
                    <a href="/products" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">Products</a>
                    <a href="/customers" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">Customers</a>
                    <button id="theme-toggle" class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700">
                        <svg class="w-5 h-5 text-gray-800 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                        </svg>
                    </button>
                    <form action="/auth/logout" method="POST" class="inline">
                        <button type="submit" class="btn-primary">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/auth/login" class="btn-primary">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
</header>