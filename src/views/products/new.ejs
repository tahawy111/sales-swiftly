<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Create New Product</h1>
        
        <form action="/products" method="POST" class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Name
                </label>
                <input type="text" name="name" required 
                    class="mt-1 block w-full rounded-md bg-gray-50 px-3 py-2 outline outline-1 outline-gray-200 focus:outline-blue-500">
            </div>

            <div>
                <label for="barcode" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Barcode/SKU
                </label>
                <input type="text" name="barcode" required 
                    class="mt-1 block w-full rounded-md bg-gray-50 px-3 py-2 outline outline-1 outline-gray-200 focus:outline-blue-500">
            </div>

            <div>
                <label for="category" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Category
                </label>
                <select id="category" 
                        name="category" 
                        required 
                        class="block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                    <option value="">Select a category</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                </select>
            </div>

            <div>
                <label for="price" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Price
                </label>
                <input type="number" name="price" step="0.01" required 
                    class="mt-1 block w-full rounded-md bg-gray-50 px-3 py-2 outline outline-1 outline-gray-200 focus:outline-blue-500">
            </div>

            <div>
                <label for="stock" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Stock
                </label>
                <input type="number" name="stock" required 
                    class="mt-1 block w-full rounded-md bg-gray-50 px-3 py-2 outline outline-1 outline-gray-200 focus:outline-blue-500">
            </div>

            <div>
                <label for="minStock" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Minimum Stock
                </label>
                <input type="number" name="minStock" required 
                    class="mt-1 block w-full rounded-md bg-gray-50 px-3 py-2 outline outline-1 outline-gray-200 focus:outline-blue-500">
            </div>

            <div class="flex justify-end space-x-4">
                <a href="/products" class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-500">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Create Product
                </button>
            </div>
        </form>
    </div>
</div>