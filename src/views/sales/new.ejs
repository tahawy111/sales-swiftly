<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-4">New Sale</h1>
  <!-- Form for adding new sale -->
  <form id="new-sale-form">
    <!-- Product selection and details -->
    <div id="product-list">
      <!-- Dynamic product rows will be added here -->
    </div>
    <button type="button" id="add-product" class="bg-blue-500 text-white px-4 py-2 rounded">Add Product</button>
    <!-- Customer selection -->
    <div class="mt-4">
      <label for="customer" class="block text-sm font-medium text-gray-700">Customer</label>
      <select id="customer" name="customer" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
        <option value="">Select a customer</option>
        <!-- Options will be populated dynamically -->
      </select>
    </div>
    <!-- Notes -->
    <div class="mt-4">
      <label for="notes" class="block text-sm font-medium text-gray-700">Notes</label>
      <textarea id="notes" name="notes" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md"></textarea>
    </div>
    <!-- Submit button -->
    <div class="mt-6">
      <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Submit Sale</button>
    </div>
  </form>
</div>